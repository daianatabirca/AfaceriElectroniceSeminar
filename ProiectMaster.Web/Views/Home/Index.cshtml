@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Home Page";
    var detailsRoute = "/Details/{0}";
}

<div class="row">

    @foreach (var product in Model)
    {
        <div class="col-sm">
            <div class="card mb-4" style="border-color: #f2fcf9;">

                <img class="card-img-top" style="height:50%" src="~/@product.ImagePath" alt="no image" />

                <div class="card-body" style="background-color: rgb(255, 255, 128);">
                    <p style="font-size:20px; color:#01184a; letter-spacing: 1px;">@product.Name</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:16px; color:#01184a"><b>$@product.Price</b></label>
                        </div>
                        <a href="@string.Format(detailsRoute, product.Id)" style="font-size:14px; padding: 5px 10px;" class=" btn pull-right btn-info">View Details</a>
                    </div>
                </div>

            </div>
        </div>
    }

</div>